{
  "manifest_version": 3,
  "name": "NostrComments",
  "version": "20.1",
  "description": "Comment freely on every website â€” without censorship",

  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "content.js" ],
      "run_at": "document_end"
    }
  ],

  "externally_connectable": {
    "matches": [ "<all_urls>" ]
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "nostrcomments@brisknessbyte.com",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"]
      },
      "externally_connectable": {
        "ids": ["*"],
        "matches": ["<all_urls>"]
      }
    }
  }
}
